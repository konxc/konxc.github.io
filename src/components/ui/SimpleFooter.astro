---

<footer class={`simple-footer ${className}`}>
  {showNewsletter && (
    <!-- Newsletter Section -->
    <NewsletterSection 
      variant="compact"
      leadSource="simple-footer"
      campaignId="website-simple-footer"
      trackingEnabled={true}
    />
  )}

  <!-- Main Footer -->
  <div class="footer-main">
    <div class="container">
      <div class="footer-content">
        <!-- Brand -->
        <div class="footer-brand">
          <Logo size="sm" variant="white" />
          <p class="brand-description">
            Menyederhanakan teknologi bagi pertumbuhan bisnis Indonesia.
          </p>
        </div>

        <!-- Links -->
        <div class="footer-links">
          <div class="links-column">
            <h4 class="links-title">Perusahaan</h4>
            <ul class="links-list">
              <li><a href="/about" class="footer-link">Tentang Kami</a></li>
              <li><a href="/team" class="footer-link">Tim</a></li>
              <li><a href="/contact" class="footer-link">Kontak</a></li>
            </ul>
          </div>
          
          <div class="links-column">
            <h4 class="links-title">Layanan</h4>
            <ul class="links-list">
              <li><a href="/services/web-development" class="footer-link">Web Development</a></li>
              <li><a href="/services/mobile-apps" class="footer-link">Mobile Apps</a></li>
              <li><a href="/services/cloud-solutions" class="footer-link">Cloud Solutions</a></li>
            </ul>
          </div>
          
          <div class="links-column">
            <h4 class="links-title">Resources</h4>
            <ul class="links-list">
              <li><a href="/blog" class="footer-link">Blog</a></li>
              <li><a href="/docs" class="footer-link">Dokumentasi</a></li>
              <li><a href="/tutorials" class="footer-link">Tutorial</a></li>
            </ul>
          </div>
          
          <div class="links-column">
            <h4 class="links-title">Komunitas</h4>
            <ul class="links-list">
              <li><a href="/contributors" class="footer-link">Kontributor</a></li>
              <li><a href="/contributors/writers" class="footer-link">Writers</a></li>
              <li><a href="/open-source" class="footer-link">Open Source</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer Bottom -->
  <div class="footer-bottom">
    <div class="container">
      <div class="footer-bottom-content">
        <div class="copyright">
          <p>&copy; {currentYear} KonXC. All rights reserved.</p>
          <div class="legal-links">
            <a href="/privacy" class="legal-link">Privasi</a>
            <a href="/terms" class="legal-link">Syarat</a>
          </div>
        </div>
        
        {showSocialLinks && (
          <div class="social-links">
            <div class="social-icons">
              {socialLinks.map(social => (
                <a 
                  href={social.href} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="social-icon"
                  aria-label={social.name}
                >
                  <Fragment set:html={social.svg} />
                </a>
              ))}
            </div>
          </div>
        )}
      </div>
    </div>
  </div>
</footer>

<style>
  @reference "@/styles/global.css";
  .simple-footer {
    @apply bg-neutral-900 text-white;
  }

  /* Newsletter Section - Now handled by NewsletterSection component */

  /* Main Footer */
  .footer-main {
    @apply py-8;
  }
  
  .footer-content {
    @apply grid md:grid-cols-2 gap-8;
  }
  
  .footer-brand {
    @apply space-y-4;
  }
  
  .brand-logo {
    @apply flex items-center gap-2;
  }
  
  .logo-image {
    @apply w-6 h-6;
  }
  
  .brand-name {
    @apply text-lg font-bold;
  }
  
  .brand-description {
    @apply text-neutral-300 text-sm;
  }
  
  .footer-links {
    @apply grid grid-cols-2 md:grid-cols-4 gap-6;
  }
  
  .links-column {
    @apply space-y-3;
  }
  
  .links-title {
    @apply font-semibold text-white text-sm;
  }
  
  .links-list {
    @apply space-y-2;
  }
  
  .footer-link {
    @apply text-neutral-300 hover:text-white transition-colors text-sm block;
  }

  /* Footer Bottom */
  .footer-bottom {
    @apply border-t border-neutral-700 py-4;
  }
  
  .footer-bottom-content {
    @apply flex flex-col md:flex-row justify-between items-center gap-4;
  }
  
  .copyright {
    @apply text-center md:text-left;
  }
  
  .copyright p {
    @apply text-neutral-400 text-sm mb-1;
  }
  
  .legal-links {
    @apply flex gap-4 text-xs;
  }
  
  .legal-link {
    @apply text-neutral-400 hover:text-white transition-colors;
  }
  
  .social-icons {
    @apply flex gap-2;
  }
  
  .social-icon {
    @apply w-8 h-8 bg-neutral-700 rounded-lg flex items-center justify-center text-neutral-300 hover:bg-primary-600 hover:text-white transition-colors;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .form-group {
      @apply flex-col;
    }
    
    .newsletter-button {
      @apply w-full;
    }
    
    .footer-links {
      @apply grid-cols-2 gap-4;
    }
    
    .footer-bottom-content {
      @apply text-center;
    }
  }
</style>

<!-- Newsletter functionality now handled by NewsletterSection component -->
