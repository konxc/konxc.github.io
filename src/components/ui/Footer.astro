const contactInfo = {
  email: 'hello@konxc.space',
  phone: '+62 882 00795 2010',
  address: 'Jakarta, Indonesia',
  website: 'https://konxc.space'
};
---

<footer class={`footer ${variant} ${className}`}>
  {variant === 'extended' && showNewsletter && (
    <!-- Newsletter Section -->
    <NewsletterSection 
      variant="default"
      leadSource="footer"
      campaignId="website-footer"
      trackingEnabled={true}
    />
  )}

  <!-- Main Footer Content -->
  <div class="footer-main">
    <div class="container">
      <div class="footer-content">
        <!-- Company Info -->
        {showCompanyInfo && (
          <div class="footer-section company-info">
            <div class="footer-brand">
              <Logo size="md" variant="white" />
              <p class="company-description">
                Kami berdedikasi untuk menyederhanakan teknologi bagi pertumbuhan bisnis. 
                Membangun ekosistem teknologi Indonesia yang kompetitif dan kolaboratif.
              </p>
            </div>
            
            <div class="contact-info">
              <div class="contact-item">
                <i class="i-mdi-email"></i>
                <a href={`mailto:${contactInfo.email}`} class="contact-link">
                  {contactInfo.email}
                </a>
              </div>
              <div class="contact-item">
                <i class="i-mdi-phone"></i>
                <a href={`tel:${contactInfo.phone}`} class="contact-link">
                  {contactInfo.phone}
                </a>
              </div>
              <div class="contact-item">
                <i class="i-mdi-map-marker"></i>
                <span class="contact-text">{contactInfo.address}</span>
              </div>
            </div>
          </div>
        )}

        <!-- Quick Links -->
        {showQuickLinks && (
          <div class="footer-section quick-links">
            <div class="links-grid">
              <div class="links-column">
                <h4 class="links-title">Perusahaan</h4>
                <ul class="links-list">
                  {quickLinks.company.map(link => (
                    <li>
                      <a href={link.href} class="footer-link">{link.name}</a>
                    </li>
                  ))}
                </ul>
              </div>
              
              <div class="links-column">
                <h4 class="links-title">Layanan</h4>
                <ul class="links-list">
                  {quickLinks.services.map(link => (
                    <li>
                      <a href={link.href} class="footer-link">{link.name}</a>
                    </li>
                  ))}
                </ul>
              </div>
              
              <div class="links-column">
                <h4 class="links-title">Resources</h4>
                <ul class="links-list">
                  {quickLinks.resources.map(link => (
                    <li>
                      <a href={link.href} class="footer-link">{link.name}</a>
                    </li>
                  ))}
                </ul>
              </div>
              
              <div class="links-column">
                <h4 class="links-title">Komunitas</h4>
                <ul class="links-list">
                  {quickLinks.community.map(link => (
                    <li>
                      <a href={link.href} class="footer-link">{link.name}</a>
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          </div>
        )}
      </div>
    </div>
  </div>

  <!-- Footer Bottom -->
  <div class="footer-bottom">
    <div class="container">
      <div class="footer-bottom-content">
        <div class="copyright">
          <p>&copy; {currentYear} KonXC. All rights reserved.</p>
          <div class="legal-links">
            <a href="/privacy-policy" class="legal-link">Kebijakan Privasi</a>
            <a href="/terms-conditions" class="legal-link">Syarat & Ketentuan</a>
            <a href="/cookie-policy" class="legal-link">Cookie Policy</a>
          </div>
        </div>
        
        {showSocialLinks && (
          <div class="social-links">
            <span class="social-label">Ikuti Kami:</span>
            <div class="social-icons">
              {socialLinks.map(social => (
                <a 
                  href={social.href} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="social-icon"
                  aria-label={social.name}
                >
                  <Fragment set:html={social.svg} />
                </a>
              ))}
            </div>
          </div>
        )}
      </div>
    </div>
  </div>
</footer>

<style>
  @reference "@/styles/global.css";
  .footer {
    @apply bg-neutral-900 text-white;
  }
  
  .footer.extended {
    @apply bg-linear-to-b from-neutral-800 to-neutral-900;
  }
  
  .footer.minimal {
    @apply bg-neutral-800;
  }

  /* Newsletter Section - Now handled by NewsletterSection component */

  /* Main Footer */
  .footer-main {
    @apply py-16 md:py-20;
  }
  
  .footer-content {
    @apply grid lg:grid-cols-2;
    gap: var(--spacing-content-gap);
  }
  
  .footer-section {
    margin-bottom: var(--spacing-content-gap);
  }

  /* Company Info */
  .footer-brand {
    @apply space-y-4;
  }
  
  .brand-logo {
    @apply flex items-center gap-3;
  }
  
  .logo-image {
    @apply w-8 h-8;
  }
  
  .brand-name {
    @apply text-2xl font-bold;
  }
  
  .company-description {
    @apply text-neutral-300 leading-relaxed;
  }
  
  .contact-info {
    @apply space-y-3;
  }
  
  .contact-item {
    @apply flex items-center gap-3;
  }
  
  .contact-link {
    @apply text-neutral-300 hover:text-white transition-colors;
  }
  
  .contact-text {
    @apply text-neutral-300;
  }

  /* Quick Links */
  .links-grid {
    @apply grid grid-cols-2 md:grid-cols-4 gap-8;
  }
  
  .links-column {
    @apply space-y-4;
  }
  
  .links-title {
    @apply font-semibold text-white mb-4;
  }
  
  .links-list {
    @apply space-y-2;
  }
  
  .footer-link {
    @apply text-neutral-300 hover:text-white transition-colors block;
  }

  /* Footer Bottom */
  .footer-bottom {
    @apply border-t border-neutral-700 py-6;
  }
  
  .footer-bottom-content {
    @apply flex flex-col md:flex-row justify-between items-center gap-4;
  }
  
  .copyright {
    @apply text-center md:text-left;
  }
  
  .copyright p {
    @apply text-neutral-400 mb-2;
  }
  
  .legal-links {
    @apply flex gap-4 text-sm;
  }
  
  .legal-link {
    @apply text-neutral-400 hover:text-white transition-colors;
  }
  
  .social-links {
    @apply flex items-center gap-4;
  }
  
  .social-label {
    @apply text-neutral-400 text-sm;
  }
  
  .social-icons {
    @apply flex gap-3;
  }
  
  .social-icon {
    @apply w-10 h-10 bg-neutral-700 rounded-lg flex items-center justify-center text-neutral-300 hover:bg-primary-600 hover:text-white transition-colors;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .newsletter-content {
      @apply px-4;
    }
    
    .form-group {
      @apply flex-col;
    }
    
    .newsletter-button {
      @apply justify-center;
    }
    
    .links-grid {
      @apply grid-cols-2 gap-6;
    }
    
    .footer-bottom-content {
      @apply text-center;
    }
    
    .legal-links {
      @apply justify-center;
    }
  }

  /* Dark mode (if needed) */
  .dark .footer {
    @apply bg-neutral-900;
  }
</style>

<!-- Newsletter functionality now handled by NewsletterSection component -->
