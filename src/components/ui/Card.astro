---
export interface Props {
  variant?: 'default' | 'featured' | 'outline';
  class?: string;
}

const { variant = 'default', class: className = '', ...props } = Astro.props;

const baseClasses = 'transition-all duration-300 hover:-translate-y-2 hover:shadow-xl';

const variantClasses = {
  default: 'bg-white rounded-2xl p-6 shadow-lg border border-neutral-100',
  featured: 'bg-gradient-to-br from-primary-50 to-secondary-50 rounded-2xl p-8 shadow-lg border border-primary-100',
  outline: 'bg-transparent rounded-2xl p-6 border-2 border-neutral-200 hover:border-primary-300'
};

const classes = `${baseClasses} ${variantClasses[variant]} ${className}`;
---

<div class={classes} {...props}>
  <slot />
</div>
