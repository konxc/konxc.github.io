  }

  .contributor-stats {
    @apply flex gap-4 mb-4;
  }

  .stat-item {
    @apply text-center;
  }

  .stat-number {
    @apply block text-lg font-bold text-primary-600;
  }

  .stat-label {
    @apply block text-xs text-neutral-500;
  }

  .card-content {
    @apply px-6 pb-4;
  }

  .contributor-bio {
    @apply text-sm text-neutral-600 mb-4 line-clamp-3;
  }

  .expertise-section {
    @apply mb-4;
  }

  .section-title {
    @apply text-sm font-semibold text-neutral-700 mb-2;
  }

