  }

  .card-header {
    @apply p-6 pb-4;
  }

  .contributor-avatar {
    @apply relative inline-block mb-4;
  }

  .avatar-image {
    @apply w-16 h-16 rounded-full object-cover border-2 border-white shadow-sm;
  }

  .status-indicator {
    @apply absolute -bottom-1 -right-1 w-4 h-4 rounded-full border-2 border-white;
  }

