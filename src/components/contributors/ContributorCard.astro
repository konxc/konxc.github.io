    @apply block text-sm font-medium text-neutral-800 truncate;
  }

  .contribution-role {
    @apply block text-xs text-neutral-500;
  }

  .card-footer {
    @apply px-6 py-4 bg-neutral-50 border-t border-neutral-100;
  }

