    @apply text-neutral-200;
  }

  .dark .card-footer {
    @apply bg-neutral-700 border-neutral-600;
  }

  .dark .social-link {
    @apply bg-neutral-600 border-neutral-500 text-neutral-300;
  }

  .dark .btn-secondary {
    @apply bg-neutral-600 border-neutral-500 text-neutral-300;
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .contributor-card {
      @apply mx-2;
    }
    
    .card-header {
