---
// Contributor Card Component
import type { CollectionEntry } from 'astro:content';
import Avatar from '@components/ui/Avatar.astro';

export interface Props {
  class?: string;
  contributor: CollectionEntry<'contributors'>;
  showDetails?: boolean;
  variant?: 'default' | 'compact' | 'featured';
}

const { 
  class: className,
  contributor,
  showDetails = true,
  variant = 'default'
} = Astro.props;

const { data } = contributor;
const totalContributions = data.contributions.blogPosts + 
  data.contributions.openSourceProjects.reduce((sum, project) => sum + (project.contributions || 0), 0) +
  data.contributions.koneksiProjects.length +
  data.contributions.communityContributions.length;

const joinDate = new Date(data.joinDate).toLocaleDateString('id-ID', {
  year: 'numeric',
  month: 'long'
});
---

<div class={`contributor-card ${variant} ${className || ''}`} data-contributor-id={contributor.slug}>
  <div class="card-header">
    <div class="contributor-avatar">
      <Avatar 
        name={data.name}
        email={data.github ? `user@${data.github.split('/').pop()}.github.com` : undefined}
        size={64}
        src={data.avatar}
        fallbackType="placeholder"
        backgroundColor="random"
        class="avatar-image"
      />
      <div class={`status-indicator ${data.isActive ? 'active' : 'inactive'}`}></div>
    </div>
    
    <div class="contributor-info">
      <h3 class="contributor-name">
        <a href={`/contributors/${contributor.slug}`}>{data.name}</a>
      </h3>
      <p class="contributor-role">{data.role}</p>
      {data.location && (
        <p class="contributor-location">üìç {data.location}</p>
      )}
    </div>
    
    <div class="contributor-stats">
      <div class="stat-item">
        <span class="stat-number">{totalContributions}</span>
        <span class="stat-label">Kontribusi</span>
      </div>
      <div class="stat-item">
        <span class="stat-number">{data.socialProof.githubStars}</span>
        <span class="stat-label">GitHub Stars</span>
      </div>
    </div>
  </div>

  {showDetails && (
    <div class="card-content">
      <p class="contributor-bio">{data.bio}</p>
      
      <div class="expertise-section">
        <h4 class="section-title">Keahlian</h4>
        <div class="expertise-tags">
          {data.expertise.slice(0, 5).map((skill) => (
            <span class="expertise-tag">{skill}</span>
          ))}
          {data.expertise.length > 5 && (
            <span class="expertise-more">+{data.expertise.length - 5} lainnya</span>
          )}
        </div>
      </div>

      <div class="contributions-preview">
        <h4 class="section-title">Kontribusi Terbaru</h4>
        <div class="contribution-items">
          {data.contributions.openSourceProjects.slice(0, 2).map((project) => (
            <div class="contribution-item">
              <span class="contribution-icon">üîß</span>
              <div class="contribution-details">
                <span class="contribution-title">{project.name}</span>
                <span class="contribution-role">{project.role}</span>
              </div>
            </div>
          ))}
          {data.contributions.koneksiProjects.slice(0, 1).map((project) => (
            <div class="contribution-item">
              <span class="contribution-icon">üè¢</span>
              <div class="contribution-details">
                <span class="contribution-title">{project.name}</span>
                <span class="contribution-role">{project.role}</span>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  )}

  <div class="card-footer">
    <div class="social-links">
      {data.github && (
        <a href={data.github} target="_blank" rel="noopener noreferrer" class="social-link github" title="GitHub">
          <svg class="social-icon" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
        </a>
      )}
      {data.linkedin && (
        <a href={data.linkedin} target="_blank" rel="noopener noreferrer" class="social-link linkedin" title="LinkedIn">
          <svg class="social-icon" fill="currentColor" viewBox="0 0 24 24">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
        </a>
      )}
      {data.twitter && (
        <a href={data.twitter} target="_blank" rel="noopener noreferrer" class="social-link twitter" title="Twitter">
          <svg class="social-icon" fill="currentColor" viewBox="0 0 24 24">
            <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
          </svg>
        </a>
      )}
      {data.website && (
        <a href={data.website} target="_blank" rel="noopener noreferrer" class="social-link website" title="Website">
          <svg class="social-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9"/>
          </svg>
        </a>
      )}
    </div>
    
    <div class="action-buttons">
      <a href={`/contributors/${contributor.slug}`} class="btn-primary">
        Lihat Profil
      </a>
      {data.availability.forCollaboration && (
        <button class="btn-secondary" data-contributor-id={contributor.slug}>
          Kolaborasi
        </button>
      )}
    </div>
  </div>
</div>

<script>
  class ContributorCard {
    private card: HTMLElement | null = null;
    private contributorId: string = '';

    constructor() {
      this.initializeElements();
      this.setupEventListeners();
    }

    private initializeElements(): void {
      this.card = document.querySelector('.contributor-card');
      this.contributorId = this.card?.getAttribute('data-contributor-id') || '';
    }

    private setupEventListeners(): void {
      // Social links tracking
      document.querySelectorAll('.social-link').forEach(link => {
        link.addEventListener('click', (e) => {
          const target = e.target as HTMLElement;
          const linkElement = target.closest('.social-link') as HTMLAnchorElement;
          this.trackSocialClick(linkElement);
        });
      });

      // Collaboration button
      document.querySelectorAll('.btn-secondary').forEach(btn => {
        btn.addEventListener('click', (e) => {
          const target = e.target as HTMLElement;
          const button = target.closest('.btn-secondary') as HTMLButtonElement;
          const contributorId = button.getAttribute('data-contributor-id');
          this.handleCollaboration(contributorId!);
        });
      });

      // Card hover effects
      this.card?.addEventListener('mouseenter', () => {
        this.card?.classList.add('hovered');
      });

      this.card?.addEventListener('mouseleave', () => {
        this.card?.classList.remove('hovered');
      });
    }

    private trackSocialClick(link: HTMLAnchorElement): void {
      const platform = link.classList.contains('twitter') ? 'twitter' :
                      link.classList.contains('linkedin') ? 'linkedin' :
                      link.classList.contains('github') ? 'github' : 'website';
      
      this.trackEvent('contributor_social_click', { 
        contributorId: this.contributorId,
        platform, 
        url: link.href 
      });
    }

    private handleCollaboration(contributorId: string): void {
      // In a real implementation, this would open a collaboration request form
      this.showMessage('Fitur kolaborasi akan segera hadir!', 'info');
      this.trackEvent('contributor_collaboration_request', { contributorId });
    }

    private trackEvent(eventName: string, data: any): void {
      if (typeof window !== 'undefined' && (window as any).gtag) {
        (window as any).gtag('event', eventName, {
          event_category: 'contributors',
          ...data
        });
      }
    }

    private showMessage(message: string, type: 'success' | 'info' | 'error'): void {
      const messageDiv = document.createElement('div');
      messageDiv.className = `contributor-message contributor-message-${type}`;
      messageDiv.textContent = message;
      
      document.body.appendChild(messageDiv);
      
      setTimeout(() => {
        messageDiv.remove();
      }, 3000);
    }
  }

  // Initialize contributor card when DOM is ready
  function initContributorCard(): void {
    if (document.querySelector('.contributor-card')) {
      new ContributorCard();
    }
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initContributorCard);
  } else {
    initContributorCard();
  }
</script>

<style>
  @reference "@/styles/global.css";
  .contributor-card {
    @apply bg-white rounded-2xl shadow-lg border border-neutral-100 overflow-hidden transition-all duration-300 hover:shadow-xl hover:-translate-y-1;
  }

  .contributor-card.featured {
    @apply border-primary-200 bg-linear-to-br from-primary-50 to-secondary-50;
  }

  .contributor-card.compact {
