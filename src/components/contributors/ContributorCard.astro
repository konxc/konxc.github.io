      @apply px-4 pb-3;
    }
    
    .card-footer {
      @apply px-4 py-3;
    }
    
    .action-buttons {
      @apply flex-col;
    }
    
    .btn-primary,
    .btn-secondary {
      @apply w-full;
    }
  }
</style>
