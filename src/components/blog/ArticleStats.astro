---
// Simple Article Stats Component
// Mempertahankan gaya lama yang sederhana dan clean
export interface Props {
  readingTime?: number;
  wordCount?: number;
  views?: number;
  publishDate?: Date;
}

const {
  readingTime = 5,
  wordCount = 0,
  views = 0,
  publishDate = new Date(),
} = Astro.props;
---

<div class="sidebar-widget">
  <div class="bg-white p-4">
    <h3 class="mb-3 text-sm font-semibold text-neutral-900">
      Statistik Artikel
    </h3>
    <div class="space-y-3">
      <div class="flex items-center justify-between">
        <span class="text-xs text-neutral-600">Kata</span>
        <span class="text-sm font-medium text-neutral-900" id="word-count"
          >{wordCount}</span
        >
      </div>
      <div class="flex items-center justify-between">
        <span class="text-xs text-neutral-600">Waktu Baca</span>
        <span
          class="text-sm font-medium text-neutral-900"
          data-reading-time={readingTime}>{readingTime} min</span
        >
      </div>
      <div class="flex items-center justify-between">
        <span class="text-xs text-neutral-600">Views</span>
        <span class="text-sm font-medium text-neutral-900">{views}</span>
      </div>
      <div class="flex items-center justify-between">
        <span class="text-xs text-neutral-600">Tanggal</span>
        <span class="text-sm font-medium text-neutral-900"
          >{publishDate.toLocaleDateString("id-ID")}</span
        >
      </div>
    </div>
  </div>
</div>
