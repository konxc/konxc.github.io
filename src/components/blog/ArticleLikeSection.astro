---
// Article Like Section Component - Specialized for blog post pages
export interface Props {
  postSlug: string;
  postTitle?: string;
  variant?: 'default' | 'minimal' | 'card' | 'gradient';
  showSocialShare?: boolean;
  showReadingTime?: boolean;
  className?: string;
}

const { 
  postSlug,
  postTitle = '',
  variant = 'default',
  showSocialShare = true,
  showReadingTime = true,
  className = ''
} = Astro.props;

const sectionId = `article-like-section-${postSlug}`;
---

<section id={sectionId} class={`article-like-section ${variant} ${className}`}>
  <div class="article-like-container">
    <div class="article-like-content">
      {/* Header */}
      <div class="article-like-header">
        <h3 class="article-like-title">Suka Artikel Ini?</h3>
        <p class="article-like-subtitle">
          Berikan apresiasi dengan like dan bagikan ke teman-teman
        </p>
      </div>

      {/* Like Button */}
      <div class="article-like-button-wrapper">
        <button 
          class="article-like-button group"
          data-post-slug={postSlug}
          aria-label="Suka artikel ini"
        >
          <div class="article-like-icon">
            <svg class="article-heart-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path 
                d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              />
            </svg>
          </div>
          
          <span class="article-like-label">Like</span>
          
          <span class="article-like-count" data-count="0">0</span>
        </button>
      </div>

      {/* Stats */}
      <div class="article-like-stats">
        <div class="article-like-stat">
          <span class="article-like-stat-number" data-reading-time="0">0</span>
          <span class="article-like-stat-label">menit dibaca</span>
        </div>
        
        <div class="article-like-stat">
          <span class="article-like-stat-number" data-like-count="0">0</span>
          <span class="article-like-stat-label">like</span>
        </div>
        
        <div class="article-like-stat">
          <span class="article-like-stat-number" data-share-count="0">0</span>
          <span class="article-like-stat-label">share</span>
        </div>
      </div>

      {/* Social Share */}
      {showSocialShare && (
        <div class="article-like-social">
          <p class="article-like-social-text">Bagikan artikel ini:</p>
          <div class="article-like-social-buttons">
            <button class="article-social-button facebook" data-platform="facebook" aria-label="Share on Facebook">
              <svg viewBox="0 0 24 24" fill="currentColor">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </button>
            
            <button class="article-social-button twitter" data-platform="twitter" aria-label="Share on Twitter">
              <svg viewBox="0 0 24 24" fill="currentColor">
                <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
              </svg>
            </button>
            
            <button class="article-social-button linkedin" data-platform="linkedin" aria-label="Share on LinkedIn">
              <svg viewBox="0 0 24 24" fill="currentColor">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </button>
            
            <button class="article-social-button whatsapp" data-platform="whatsapp" aria-label="Share on WhatsApp">
              <svg viewBox="0 0 24 24" fill="currentColor">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
              </svg>
            </button>
            
            <button class="article-social-button copy" data-platform="copy" aria-label="Copy link">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="9" y="9" width="13" height="13" rx="2" ry="2"/>
                <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/>
              </svg>
            </button>
          </div>
        </div>
      )}

      {/* Feedback */}
      <div class="article-like-feedback">
        <div class="article-like-success">
          <svg class="article-success-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M9 12l2 2 4-4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          <span>Terima kasih! Artikel ini sudah di-like</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @reference "@/styles/global.css";
  .article-like-section {
    @apply my-16;
  }

  .article-like-container {
    @apply max-w-4xl mx-auto px-4;
  }

  .article-like-content {
    @apply text-center;
  }

  /* Header */
  .article-like-header {
    @apply mb-8;
  }

  .article-like-title {
    @apply text-2xl font-bold text-neutral-800 mb-2;
  }

  .article-like-subtitle {
    @apply text-neutral-600 text-lg;
  }

  /* Like Button */
  .article-like-button-wrapper {
    @apply mb-8;
  }

  .article-like-button {
    @apply relative inline-flex items-center gap-3 px-8 py-4 bg-white border-2 border-red-200 rounded-full shadow-lg hover:shadow-xl transition-all duration-300 cursor-pointer;
    @apply hover:border-red-300 hover:bg-red-50;
  }

  .article-like-button:focus {
    @apply outline-none ring-2 ring-red-500 ring-offset-2;
  }

  .article-like-button.liked {
    @apply bg-red-500 border-red-500 text-white;
  }

  .article-like-button.liked:hover {
    @apply bg-red-600 border-red-600;
  }

  /* Icon */
  .article-like-icon {
    @apply relative;
  }

  .article-heart-icon {
    @apply w-6 h-6 transition-all duration-300;
  }

  .article-like-button:hover .article-heart-icon {
    @apply scale-110;
  }

  .article-like-button.liked .article-heart-icon {
    @apply fill-current;
  }

  /* Label */
  .article-like-label {
    @apply font-semibold text-lg;
  }

  /* Count */
  .article-like-count {
    @apply bg-red-100 text-red-600 text-sm px-3 py-1 rounded-full font-medium;
  }

  .article-like-button.liked .article-like-count {
    @apply bg-red-200 text-red-700;
  }

  /* Stats */
  .article-like-stats {
    @apply flex justify-center gap-8 mb-8;
  }

  .article-like-stat {
    @apply text-center;
  }

  .article-like-stat-number {
    @apply block text-2xl font-bold text-neutral-800;
  }

  .article-like-stat-label {
    @apply text-sm text-neutral-600;
  }

  /* Social Share */
  .article-like-social {
    @apply mb-6;
  }

  .article-like-social-text {
    @apply text-neutral-600 mb-4;
  }

  .article-like-social-buttons {
    @apply flex justify-center gap-3;
  }

  .article-social-button {
    @apply w-10 h-10 rounded-full flex items-center justify-center transition-all duration-300 hover:scale-110;
  }

  .article-social-button.facebook {
    @apply bg-blue-600 text-white hover:bg-blue-700;
  }

  .article-social-button.twitter {
    @apply bg-sky-500 text-white hover:bg-sky-600;
  }

  .article-social-button.linkedin {
    @apply bg-blue-700 text-white hover:bg-blue-800;
  }

  .article-social-button.whatsapp {
    @apply bg-green-500 text-white hover:bg-green-600;
  }

  .article-social-button.copy {
    @apply bg-neutral-600 text-white hover:bg-neutral-700;
  }

  .article-social-button svg {
    @apply w-5 h-5;
  }

  /* Feedback */
  .article-like-feedback {
    @apply absolute inset-0 flex items-center justify-center opacity-0 pointer-events-none transition-all duration-500;
  }

  .article-like-feedback.show {
    @apply opacity-100 pointer-events-auto;
  }

  .article-like-success {
    @apply flex items-center gap-3 bg-green-500 text-white px-6 py-3 rounded-full shadow-lg;
  }

  .article-success-icon {
    @apply w-5 h-5;
  }

  /* Variants */
  .article-like-section.card {
    @apply bg-gradient-to-r from-red-50 to-pink-50 p-8 rounded-2xl border border-red-100;
  }

  .article-like-section.card .article-like-title {
    @apply text-red-800;
  }

  .article-like-section.card .article-like-subtitle {
    @apply text-red-600;
  }

  .article-like-section.gradient {
    @apply bg-gradient-to-br from-red-500 via-pink-500 to-purple-500 text-white p-8 rounded-2xl;
  }

  .article-like-section.gradient .article-like-title {
    @apply text-white;
  }

  .article-like-section.gradient .article-like-subtitle {
    @apply text-red-100;
  }

  .article-like-section.gradient .article-like-button {
    @apply bg-white text-red-500 border-white;
  }

  .article-like-section.gradient .article-like-button:hover {
    @apply bg-red-50;
  }

  .article-like-section.gradient .article-like-stat-number {
    @apply text-white;
  }

  .article-like-section.gradient .article-like-stat-label {
    @apply text-red-100;
  }

  .article-like-section.gradient .article-like-social-text {
    @apply text-red-100;
  }

  /* Animations */
  @keyframes articleHeartBeat {
    0% { transform: scale(1); }
    50% { transform: scale(1.2); }
    100% { transform: scale(1); }
  }

  .article-like-button.liked .article-heart-icon {
    animation: articleHeartBeat 0.6s ease-in-out;
  }

  @keyframes articleLikePulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.05); }
    100% { transform: scale(1); }
  }

  .article-like-button:hover {
    animation: articleLikePulse 0.3s ease-in-out;
  }

  /* Dark mode support */
  .dark .article-like-title {
    @apply text-neutral-100;
  }

  .dark .article-like-subtitle {
    @apply text-neutral-400;
  }

  .dark .article-like-button {
    @apply bg-neutral-800 border-neutral-600 text-neutral-100;
  }

  .dark .article-like-button:hover {
    @apply border-red-400 bg-red-900;
  }

  .dark .article-like-stat-number {
    @apply text-neutral-100;
  }

  .dark .article-like-stat-label {
    @apply text-neutral-400;
  }

  .dark .article-like-social-text {
    @apply text-neutral-400;
  }

  .dark .article-like-section.card {
    @apply bg-gradient-to-r from-red-900 to-pink-900 border-red-800;
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .article-like-section {
      @apply my-12;
    }

    .article-like-title {
      @apply text-xl;
    }

    .article-like-subtitle {
      @apply text-base;
    }

    .article-like-button {
      @apply px-6 py-3;
    }

    .article-heart-icon {
      @apply w-5 h-5;
    }

    .article-like-label {
      @apply text-base;
    }

    .article-like-stats {
      @apply gap-4;
    }

    .article-like-stat-number {
      @apply text-xl;
    }

    .article-social-button {
      @apply w-8 h-8;
    }

    .article-social-button svg {
      @apply w-4 h-4;
    }
  }
</style>

<script>
  // Article Like Section Functionality
  function initializeArticleLikeSection() {
    const section = document.getElementById('${sectionId}');
    if (!section) return;

    const likeButton = section.querySelector('.article-like-button');
    const countElement = likeButton.querySelector('.article-like-count');
    const feedbackElement = section.querySelector('.article-like-feedback');
    const statsElements = {
      readingTime: section.querySelector('[data-reading-time]'),
      likeCount: section.querySelector('[data-like-count]'),
      shareCount: section.querySelector('[data-share-count]')
    };

    // Load saved state
    const savedState = localStorage.getItem(`like-${postSlug}`);
    if (savedState) {
      const { liked, count } = JSON.parse(savedState);
      if (liked) {
        likeButton.classList.add('liked');
      }
      if (countElement) {
        countElement.textContent = count;
        countElement.dataset.count = count;
      }
      if (statsElements.likeCount) {
        statsElements.likeCount.textContent = count;
      }
    }

    // Calculate reading time
    const content = document.querySelector('.blog-content');
    if (content && statsElements.readingTime) {
      const text = content.textContent || '';
      const wordsPerMinute = 200;
      const wordCount = text.split(/\s+/).length;
      const readingTime = Math.ceil(wordCount / wordsPerMinute);
      statsElements.readingTime.textContent = readingTime;
    }

    // Handle like button click
    likeButton.addEventListener('click', async () => {
      if (likeButton.classList.add('liked')) return;

      // Add liked class immediately for better UX
      likeButton.classList.add('liked');
      
      // Update count
      const currentCount = parseInt(countElement?.dataset.count || '0');
      const newCount = currentCount + 1;
      
      if (countElement) {
        countElement.textContent = newCount;
        countElement.dataset.count = newCount;
      }

      if (statsElements.likeCount) {
        statsElements.likeCount.textContent = newCount;
      }

      // Save to localStorage
      localStorage.setItem(`like-${postSlug}`, JSON.stringify({
        liked: true,
        count: newCount
      }));

      // Show feedback
      if (feedbackElement) {
        feedbackElement.classList.add('show');
        setTimeout(() => {
          feedbackElement.classList.remove('show');
        }, 3000);
      }

      // Send analytics event
      if (typeof gtag !== 'undefined') {
        gtag('event', 'like_article_section', {
          'post_slug': postSlug,
          'like_count': newCount
        });
      }

      // Optional: Send to server
      try {
        await fetch('/api/like', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            postSlug: postSlug,
            action: 'like',
            position: 'article_section'
          })
        });
      } catch (error) {
        console.log('Article like tracking failed:', error);
      }
    });

    // Handle social share buttons
    const socialButtons = section.querySelectorAll('.article-social-button');
    socialButtons.forEach(button => {
      button.addEventListener('click', () => {
        const platform = button.dataset.platform;
        const url = window.location.href;
        const title = document.title;

        if (platform === 'copy') {
          navigator.clipboard.writeText(url).then(() => {
            // Show feedback
            const originalText = button.innerHTML;
            button.innerHTML = '<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M9 12l2 2 4-4"/></svg>';
            setTimeout(() => {
              button.innerHTML = originalText;
            }, 2000);
          });
        } else {
          let shareUrl = '';
          switch (platform) {
            case 'facebook':
              shareUrl = `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(url)}`;
              break;
            case 'twitter':
              shareUrl = `https://twitter.com/intent/tweet?url=${encodeURIComponent(url)}&text=${encodeURIComponent(title)}`;
              break;
            case 'linkedin':
              shareUrl = `https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(url)}`;
              break;
            case 'whatsapp':
              shareUrl = `https://wa.me/?text=${encodeURIComponent(title + ' ' + url)}`;
              break;
          }
          
          if (shareUrl) {
            window.open(shareUrl, '_blank', 'width=600,height=400');
          }
        }

        // Update share count
        if (statsElements.shareCount) {
          const currentShareCount = parseInt(statsElements.shareCount.textContent || '0');
          statsElements.shareCount.textContent = currentShareCount + 1;
        }

        // Send analytics event
        if (typeof gtag !== 'undefined') {
          gtag('event', 'share_article', {
            'post_slug': postSlug,
            'platform': platform
          });
        }
      });
    });
  }

  // Initialize when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initializeArticleLikeSection);
  } else {
    initializeArticleLikeSection();
  }
</script>
