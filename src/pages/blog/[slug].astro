---
import { getCollection } from 'astro:content';
import MainLayout from '../../layouts/MainLayout.astro';
import Card from '../../components/ui/Card.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<MainLayout 
  title={post.data.title}
  description={post.data.description}
>
  <!-- Blog Post Header -->
  <section class="section bg-gradient-to-br from-primary-50 to-secondary-50">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-8">
          <div class="text-sm font-semibold text-primary-600 mb-4 uppercase tracking-wide">
            {post.data.category}
          </div>
          <h1 class="text-4xl lg:text-5xl font-bold mb-6">
            {post.data.title}
          </h1>
          <p class="text-xl text-neutral-600 mb-8">
            {post.data.description}
          </p>
          
          <div class="flex items-center justify-center gap-6 text-sm text-neutral-500 mb-8">
            <div class="flex items-center gap-2">
              <span class="w-8 h-8 bg-primary-100 rounded-full flex items-center justify-center text-primary-600 font-semibold">
                {post.data.author.charAt(0)}
              </span>
              <span>By {post.data.author}</span>
            </div>
            <span>•</span>
            <span>{post.data.publishDate.toLocaleDateString('id-ID')}</span>
            {post.data.readingTime && (
              <>
                <span>•</span>
                <span>{post.data.readingTime} min read</span>
              </>
            )}
          </div>
          
          <div class="flex flex-wrap justify-center gap-2">
            {post.data.tags.map((tag) => (
              <span class="px-3 py-1 bg-white text-primary-600 text-sm rounded-full shadow-sm">
                #{tag}
              </span>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Blog Post Content -->
  <section class="section bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <Card class="prose prose-lg max-w-none">
          <Content />
        </Card>
      </div>
    </div>
  </section>

  <!-- Related Posts -->
  <section class="section bg-neutral-50">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold mb-8 text-center">Artikel Terkait</h2>
        
        <div class="grid md:grid-cols-2 gap-8">
          <Card class="group">
            <div class="mb-4">
              <div class="text-xs font-semibold text-primary-600 mb-2 uppercase tracking-wide">
                Business
              </div>
              <h3 class="text-xl font-bold mb-3 group-hover:text-primary-600 transition-colors">
                Digitalisasi UMKM: Panduan Lengkap 2024
              </h3>
              <p class="text-neutral-600 text-sm mb-4">
                Pelajari langkah-langkah praktis untuk mendigitalisasi bisnis UMKM Anda...
              </p>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-xs text-neutral-500">5 min read</span>
              <a href="#" class="text-primary-600 font-semibold text-sm hover:text-primary-700 transition-colors">
                Baca →
              </a>
            </div>
          </Card>
          
          <Card class="group">
            <div class="mb-4">
              <div class="text-xs font-semibold text-primary-600 mb-2 uppercase tracking-wide">
                Technical
              </div>
              <h3 class="text-xl font-bold mb-3 group-hover:text-primary-600 transition-colors">
                Best Practices Setup Server untuk Startup
              </h3>
              <p class="text-neutral-600 text-sm mb-4">
                Tips dan trik untuk setup server yang optimal untuk startup...
              </p>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-xs text-neutral-500">8 min read</span>
              <a href="#" class="text-primary-600 font-semibold text-sm hover:text-primary-700 transition-colors">
                Baca →
              </a>
            </div>
          </Card>
        </div>
      </div>
    </div>
  </section>

  <!-- Newsletter Signup -->
  <section class="section bg-white">
    <div class="container">
      <div class="max-w-2xl mx-auto text-center">
        <h2 class="text-3xl font-bold mb-4">
          Suka Artikel Ini?
        </h2>
        <p class="text-xl text-neutral-600 mb-8">
          Dapatkan artikel serupa langsung di inbox Anda. 
          Subscribe newsletter KonXC untuk tips teknologi terbaru.
        </p>
        
        <div class="bg-gradient-to-br from-primary-50 to-secondary-50 rounded-2xl p-8">
          <form class="space-y-4">
            <div class="flex flex-col sm:flex-row gap-4">
              <input 
                type="email" 
                placeholder="Email Anda" 
                class="form-input flex-1"
                required
              />
              <button type="submit" class="btn-primary whitespace-nowrap">
                Subscribe
              </button>
            </div>
            <p class="text-sm text-neutral-500">
              Kami menghargai privasi Anda. Tidak ada spam, unsubscribe kapan saja.
            </p>
          </form>
        </div>
      </div>
    </div>
  </section>
</MainLayout>
