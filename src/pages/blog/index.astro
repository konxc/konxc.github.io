---
import MainLayout from '../layouts/MainLayout.astro';
import { getCollection } from 'astro:content';
import Card from '../components/ui/Card.astro';

const posts = await getCollection('blog');
const sortedPosts = posts.sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf());
---

<MainLayout 
  title="Blog KonXC - Insights, Tutorials & Success Stories"
  description="Artikel teknologi, tips bisnis, dan studi kasus dari tim KonXC. Pelajari cara mengoptimalkan teknologi untuk pertumbuhan bisnis Anda."
>
  <!-- Blog Hero -->
  <section class="section bg-gradient-to-br from-primary-50 to-secondary-50">
    <div class="container">
      <div class="text-center max-w-4xl mx-auto">
        <h1 class="text-4xl lg:text-5xl font-bold mb-6">
          Blog <span class="text-gradient">KonXC</span>
        </h1>
        <p class="text-xl text-neutral-600 mb-8">
          Insights, tutorials, dan success stories dari tim KonXC. 
          Pelajari cara mengoptimalkan teknologi untuk pertumbuhan bisnis Anda.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <span class="px-4 py-2 bg-white rounded-full text-sm font-medium text-primary-600 shadow-sm">
            üìù {sortedPosts.length} Artikel
          </span>
          <span class="px-4 py-2 bg-white rounded-full text-sm font-medium text-secondary-600 shadow-sm">
            üéØ Tips Teknologi
          </span>
          <span class="px-4 py-2 bg-white rounded-full text-sm font-medium text-accent-600 shadow-sm">
            üí° Case Studies
          </span>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Post -->
  {sortedPosts.length > 0 && (
    <section class="section bg-white">
      <div class="container">
        <h2 class="text-3xl font-bold mb-8 text-center">Artikel Unggulan</h2>
        <div class="max-w-4xl mx-auto">
          <Card variant="featured" class="text-center">
            <div class="mb-6">
              <div class="text-sm font-semibold text-primary-600 mb-2">
                {sortedPosts[0].data.category.toUpperCase()}
              </div>
              <h3 class="text-2xl font-bold mb-4">{sortedPosts[0].data.title}</h3>
              <p class="text-neutral-600 mb-4">{sortedPosts[0].data.description}</p>
            </div>
            <div class="flex items-center justify-center gap-4 text-sm text-neutral-500 mb-6">
              <span>By {sortedPosts[0].data.author}</span>
              <span>‚Ä¢</span>
              <span>{sortedPosts[0].data.publishDate.toLocaleDateString('id-ID')}</span>
              {sortedPosts[0].data.readingTime && (
                <>
                  <span>‚Ä¢</span>
                  <span>{sortedPosts[0].data.readingTime} min read</span>
                </>
              )}
            </div>
            <a href={`/blog/${sortedPosts[0].slug}`} class="btn-primary">
              Baca Artikel
            </a>
          </Card>
        </div>
      </div>
    </section>
  )}

  <!-- All Posts -->
  <section class="section bg-neutral-50">
    <div class="container">
      <h2 class="text-3xl font-bold mb-8 text-center">Semua Artikel</h2>
      
      {sortedPosts.length === 0 ? (
        <div class="text-center py-16">
          <div class="text-6xl mb-4">üìù</div>
          <h3 class="text-2xl font-bold mb-4">Artikel Segera Hadir</h3>
          <p class="text-neutral-600 mb-8">
            Tim KonXC sedang menyiapkan artikel-artikel berkualitas untuk Anda.
            Daftar newsletter untuk mendapatkan notifikasi artikel terbaru.
          </p>
          <a href="#newsletter" class="btn-primary">
            Daftar Newsletter
          </a>
        </div>
      ) : (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {sortedPosts.map((post) => (
            <Card class="group">
              <div class="mb-4">
                <div class="text-xs font-semibold text-primary-600 mb-2 uppercase tracking-wide">
                  {post.data.category}
                </div>
                <h3 class="text-xl font-bold mb-3 group-hover:text-primary-600 transition-colors">
                  {post.data.title}
                </h3>
                <p class="text-neutral-600 text-sm mb-4 line-clamp-3">
                  {post.data.description}
                </p>
              </div>
              
              <div class="flex items-center justify-between text-xs text-neutral-500 mb-4">
                <span>By {post.data.author}</span>
                <span>{post.data.publishDate.toLocaleDateString('id-ID')}</span>
              </div>
              
              <div class="flex items-center justify-between">
                <div class="flex flex-wrap gap-1">
                  {post.data.tags.slice(0, 2).map((tag) => (
                    <span class="px-2 py-1 bg-neutral-100 text-neutral-600 text-xs rounded">
                      {tag}
                    </span>
                  ))}
                </div>
                <a href={`/blog/${post.slug}`} class="text-primary-600 font-semibold text-sm hover:text-primary-700 transition-colors">
                  Baca ‚Üí
                </a>
              </div>
            </Card>
          ))}
        </div>
      )}
    </div>
  </section>

  <!-- Newsletter Signup -->
  <section id="newsletter" class="section bg-white">
    <div class="container">
      <div class="max-w-2xl mx-auto text-center">
        <h2 class="text-3xl font-bold mb-4">
          Dapatkan Tips Teknologi Mingguan
        </h2>
        <p class="text-xl text-neutral-600 mb-8">
          Subscribe newsletter kami untuk mendapatkan tips teknologi terbaru, 
          case studies, dan insights dari tim KonXC.
        </p>
        
        <div class="bg-gradient-to-br from-primary-50 to-secondary-50 rounded-2xl p-8">
          <form class="space-y-4">
            <div class="flex flex-col sm:flex-row gap-4">
              <input 
                type="email" 
                placeholder="Email Anda" 
                class="form-input flex-1"
                required
              />
              <button type="submit" class="btn-primary whitespace-nowrap">
                Subscribe
              </button>
            </div>
            <p class="text-sm text-neutral-500">
              Kami menghargai privasi Anda. Tidak ada spam, unsubscribe kapan saja.
            </p>
          </form>
        </div>
      </div>
    </div>
  </section>
</MainLayout>
