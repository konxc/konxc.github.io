---
import ExtendedLayout from '@layouts/ExtendedLayout.astro';
import { getCollection } from 'astro:content';
import ContributorCard from '@components/contributors/ContributorCard.astro';

const contributors = await getCollection('contributors');
const activeContributors = contributors.filter(contributor => contributor.data.isActive);
const sortedContributors = activeContributors.sort((a, b) => {
  const aScore = a.data.socialProof.githubStars + a.data.socialProof.communityReputation;
  const bScore = b.data.socialProof.githubStars + b.data.socialProof.communityReputation;
  return bScore - aScore;
});

// Group contributors by role
const contributorsByRole = sortedContributors.reduce((acc, contributor) => {
  const role = contributor.data.role;
  if (!acc[role]) {
    acc[role] = [];
  }
  acc[role].push(contributor);
  return acc;
}, {} as Record<string, typeof sortedContributors>);

// Calculate community stats
const totalContributions = contributors.reduce((sum, contributor) => {
  return sum + contributor.data.contributions.blogPosts + 
    contributor.data.contributions.openSourceProjects.reduce((projectSum, project) => projectSum + (project.contributions || 0), 0) +
    contributor.data.contributions.koneksiProjects.length +
    contributor.data.contributions.communityContributions.length;
}, 0);

const totalOpenSourceProjects = contributors.reduce((sum, contributor) => {
  return sum + contributor.data.contributions.openSourceProjects.length;
}, 0);

const totalKoneksiProjects = contributors.reduce((sum, contributor) => {
  return sum + contributor.data.contributions.koneksiProjects.length;
}, 0);
