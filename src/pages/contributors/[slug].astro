                </a>
              )}
              {data.website && (
                <a href={data.website} target="_blank" rel="noopener noreferrer" class="social-link-large website">
                  <svg class="social-icon-large" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9"/>
                  </svg>
                  Website
                </a>
              )}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contributor Content -->
  <section class="section bg-white">
    <div class="container">
      <div class="max-w-6xl mx-auto">
        <div class="grid lg:grid-cols-3 gap-8">
          <!-- Main Content -->
          <div class="lg:col-span-2 space-y-8">
            <!-- Expertise -->
            <div class="expertise-section">
              <h2 class="section-title">Keahlian</h2>
              <div class="expertise-grid">
                {data.expertise.map((skill) => (
                  <div class="expertise-item">
                    <span class="expertise-skill">{skill}</span>
                  </div>
                ))}
              </div>
            </div>

            <!-- Open Source Projects -->
            {data.contributions.openSourceProjects.length > 0 && (
              <div class="projects-section">
                <h2 class="section-title">Project Open Source</h2>
                <div class="projects-grid">
                  {data.contributions.openSourceProjects.map((project) => (
                    <div class="project-card">
                      <div class="project-header">
                        <h3 class="project-title">{project.name}</h3>
                        <span class={`project-role ${project.isMaintainer ? 'maintainer' : 'contributor'}`}>
                          {project.isMaintainer ? 'Maintainer' : 'Contributor'}
                        </span>
                      </div>
                      <p class="project-description">Role: {project.role}</p>
                      <div class="project-stats">
                        <span class="project-stat">
                          <span class="stat-number">{project.contributions || 0}</span>
                          <span class="stat-label">Kontribusi</span>
                        </span>
                      </div>
                      <a href={project.url} target="_blank" rel="noopener noreferrer" class="project-link">
                        Lihat Project
                      </a>
                    </div>
                  ))}
                </div>
              </div>
            )}

            <!-- Koneksi Projects -->
            {data.contributions.koneksiProjects.length > 0 && (
              <div class="projects-section">
                <h2 class="section-title">Project Koneksi</h2>
                <div class="projects-grid">
                  {data.contributions.koneksiProjects.map((project) => (
                    <div class="project-card koneksi">
                      <div class="project-header">
                        <h3 class="project-title">{project.name}</h3>
                        <span class={`project-status ${project.status}`}>
                          {project.status === 'active' && 'Aktif'}
                          {project.status === 'completed' && 'Selesai'}
                          {project.status === 'archived' && 'Arsip'}
                        </span>
                      </div>
                      <p class="project-description">{project.description}</p>
                      <p class="project-role">Role: {project.role}</p>
                      <div class="project-dates">
                        <span class="project-date">
                          Mulai: {new Date(project.startDate).toLocaleDateString('id-ID')}
                        </span>
                        {project.endDate && (
                          <span class="project-date">
                            Selesai: {new Date(project.endDate).toLocaleDateString('id-ID')}
                          </span>
                        )}
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            )}

            <!-- Community Contributions -->
            {data.contributions.communityContributions.length > 0 && (
              <div class="community-section">
                <h2 class="section-title">Kontribusi Komunitas</h2>
                <div class="community-timeline">
                  {data.contributions.communityContributions.map((contribution) => (
                    <div class="timeline-item">
                      <div class="timeline-marker">
                        <span class="timeline-icon">
                          {contribution.type === 'event' && 'üé§'}
                          {contribution.type === 'mentoring' && 'üéì'}
                          {contribution.type === 'documentation' && 'üìö'}
                          {contribution.type === 'translation' && 'üåê'}
                          {contribution.type === 'bug-report' && 'üêõ'}
                          {contribution.type === 'feature-request' && 'üí°'}
                        </span>
                      </div>
                      <div class="timeline-content">
                        <h4 class="timeline-title">{contribution.title}</h4>
                        <p class="timeline-description">{contribution.description}</p>
                        <div class="timeline-meta">
                          <span class="timeline-date">{new Date(contribution.date).toLocaleDateString('id-ID')}</span>
                          <span class={`timeline-impact ${contribution.impact}`}>
                            {contribution.impact === 'high' && 'Dampak Tinggi'}
                            {contribution.impact === 'medium' && 'Dampak Sedang'}
                            {contribution.impact === 'low' && 'Dampak Rendah'}
                          </span>
                        </div>
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            )}

            <!-- Achievements -->
            {data.achievements.length > 0 && (
              <div class="achievements-section">
                <h2 class="section-title">Pencapaian</h2>
                <div class="achievements-grid">
                  {data.achievements.map((achievement) => (
                    <div class="achievement-card">
                      <div class="achievement-header">
                        <h4 class="achievement-title">{achievement.title}</h4>
                        {achievement.verified && (
                          <span class="achievement-verified">‚úÖ Terverifikasi</span>
                        )}
                      </div>
                      <p class="achievement-description">{achievement.description}</p>
                      <div class="achievement-meta">
                        <span class="achievement-date">{new Date(achievement.date).toLocaleDateString('id-ID')}</span>
                        <span class={`achievement-category ${achievement.category}`}>
                          {achievement.category === 'technical' && 'Teknis'}
                          {achievement.category === 'community' && 'Komunitas'}
                          {achievement.category === 'leadership' && 'Kepemimpinan'}
                          {achievement.category === 'innovation' && 'Inovasi'}
                        </span>
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            )}
          </div>

          <!-- Sidebar -->
          <div class="lg:col-span-1">
            <div class="sidebar-content">
              <!-- Availability -->
              <div class="availability-card">
                <h3 class="card-title">Ketersediaan</h3>
                <div class="availability-list">
                  {data.availability.forMentoring && (
                    <div class="availability-item">
                      <span class="availability-icon">üéì</span>
                      <span class="availability-text">Mentoring</span>
                    </div>
                  )}
                  {data.availability.forCollaboration && (
                    <div class="availability-item">
                      <span class="availability-icon">ü§ù</span>
                      <span class="availability-text">Kolaborasi</span>
                    </div>
                  )}
                  {data.availability.forSpeaking && (
                    <div class="availability-item">
                      <span class="availability-icon">üé§</span>
                      <span class="availability-text">Speaking</span>
                    </div>
                  )}
                </div>
                {data.availability.timezone && (
                  <p class="timezone-info">Timezone: {data.availability.timezone}</p>
                )}
              </div>

              <!-- Skills Breakdown -->
              <div class="skills-card">
                <h3 class="card-title">Breakdown Keahlian</h3>
                <div class="skills-breakdown">
                  <div class="skill-category">
                    <h4 class="skill-category-title">Teknis</h4>
                    <div class="skill-tags">
                      {data.skills.technical.map((skill) => (
                        <span class="skill-tag technical">{skill}</span>
                      ))}
                    </div>
                  </div>
                  <div class="skill-category">
                    <h4 class="skill-category-title">Soft Skills</h4>
                    <div class="skill-tags">
                      {data.skills.soft.map((skill) => (
                        <span class="skill-tag soft">{skill}</span>
                      ))}
                    </div>
                  </div>
                  <div class="skill-category">
                    <h4 class="skill-category-title">Bahasa</h4>
                    <div class="skill-tags">
                      {data.skills.languages.map((language) => (
                        <span class="skill-tag language">{language}</span>
                      ))}
                    </div>
                  </div>
                </div>
              </div>

              <!-- Social Proof -->
              <div class="social-proof-card">
                <h3 class="card-title">Social Proof</h3>
                <div class="social-proof-stats">
                  <div class="proof-stat">
                    <span class="proof-number">{data.socialProof.githubStars}</span>
                    <span class="proof-label">GitHub Stars</span>
                  </div>
                  <div class="proof-stat">
                    <span class="proof-number">{data.socialProof.npmDownloads.toLocaleString()}</span>
                    <span class="proof-label">NPM Downloads</span>
                  </div>
                  <div class="proof-stat">
                    <span class="proof-number">{data.socialProof.communityReputation}</span>
                    <span class="proof-label">Reputasi Komunitas</span>
                  </div>
                  <div class="proof-stat">
                    <span class="proof-number">{data.socialProof.verifiedContributions}</span>
                    <span class="proof-label">Kontribusi Terverifikasi</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Related Contributors -->
  {relatedContributors.length > 0 && (
    <section class="section bg-neutral-50">
      <div class="container">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl font-bold mb-8 text-center">Kontributor Terkait</h2>
          <div class="grid md:grid-cols-3 gap-6">
            {relatedContributors.map((contributor) => (
              <WriterCard 
                writer={contributor} 
                variant="compact"
                showStats={true}
                showExpertise={false}
                showActions={true}
              />
            ))}
          </div>
        </div>
      </div>
    </section>
  )}
</MainLayout>

