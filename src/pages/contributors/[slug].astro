---
import MainLayout from '@layouts/MainLayout.astro';
import { getCollection, type CollectionEntry } from 'astro:content';
import ContributorCard from '@components/contributors/ContributorCard.astro';
import ContributorStats from '@components/contributors/ContributorStats.astro';
import Avatar from '@components/ui/Avatar.astro';
import WriterCard from '@components/contributors/WriterCard.astro';

type Props = {
  contributor: CollectionEntry<'contributors'>;
};

export async function getStaticPaths() {
  const contributors = await getCollection('contributors');
  return contributors.map((contributor: CollectionEntry<'contributors'>) => ({
    params: { slug: contributor.slug },
    props: { contributor },
  }));
}

const { contributor }: Props = Astro.props;
const { data } = contributor;

// Calculate total contributions
const totalContributions = data.contributions.blogPosts + 
  data.contributions.openSourceProjects.reduce((sum, project) => sum + (project.contributions || 0), 0) +
  data.contributions.koneksiProjects.length +
  data.contributions.communityContributions.length;

// Format dates
const joinDate = new Date(data.joinDate).toLocaleDateString('id-ID', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

// Get related contributors (same role or similar expertise)
const allContributors = await getCollection('contributors');
const relatedContributors = allContributors
  .filter(c => c.slug !== contributor.slug)
  .filter(c => c.data.role === data.role || c.data.expertise.some(skill => data.expertise.includes(skill)))
  .slice(0, 3);
---

<MainLayout 
  title={`${data.name} - Kontributor Koneksi`}
  description={data.bio}
>
  <!-- Contributor Hero -->
  <section class="contributor-hero bg-linear-to-br from-primary-50 to-secondary-50">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <div class="flex flex-col md:flex-row gap-8 items-center">
          <div class="contributor-avatar-large">
            <Avatar 
              name={data.name}
              email={data.github ? `user@${data.github.split('/').pop()}.github.com` : undefined}
              size={128}
              src={data.avatar}
              fallbackType="placeholder"
              backgroundColor="0D8ABC"
              textColor="FFFFFF"
              class="avatar-image"
            />
            <div class={`status-indicator-large ${data.isActive ? 'active' : 'inactive'}`}></div>
          </div>
          
          <div class="contributor-info-large">
            <h1 class="contributor-name-large">{data.name}</h1>
            <p class="contributor-role-large">{data.role}</p>
            {data.location && (
              <p class="contributor-location-large">üìç {data.location}</p>
