    @apply flex gap-4;
  }

  .timeline-marker {
    @apply shrink-0;
  }

  .timeline-icon {
    @apply w-10 h-10 bg-primary-100 text-primary-600 rounded-full flex items-center justify-center text-lg;
  }

  .timeline-content {
    @apply flex-1;
  }

  .timeline-title {
    @apply text-lg font-bold text-neutral-800 mb-2;
  }

