---
// Logo Demo Page
import Logo from '@components/ui/Logo.astro';
---

<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Logo KonXC Demo - Brand Assets</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-neutral-100">
  <div class="min-h-screen py-12">
    <!-- Header -->
    <header class="bg-white shadow-sm py-8 mb-12">
      <div class="container mx-auto px-4">
        <h1 class="text-3xl font-bold text-center">Logo KonXC - Brand Assets</h1>
        <p class="text-neutral-600 text-center mt-2">
          Berbagai ukuran dan variant logo untuk penggunaan di website
        </p>
      </div>
    </header>

    <!-- Demo Sections -->
    <main class="container mx-auto px-4 space-y-16">
      
      <!-- Size Variants -->
      <section class="bg-white rounded-lg shadow-sm p-8">
        <h2 class="text-2xl font-bold mb-6">Ukuran Logo</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-8">
          <div class="text-center">
            <h3 class="text-sm font-semibold mb-4">Extra Small (xs)</h3>
            <div class="bg-neutral-50 p-4 rounded-lg">
              <Logo size="xs" />
            </div>
            <code class="text-xs mt-2 block">&lt;Logo size="xs" /&gt;</code>
          </div>
          
          <div class="text-center">
            <h3 class="text-sm font-semibold mb-4">Small (sm)</h3>
            <div class="bg-neutral-50 p-4 rounded-lg">
              <Logo size="sm" />
            </div>
            <code class="text-xs mt-2 block">&lt;Logo size="sm" /&gt;</code>
          </div>
          
          <div class="text-center">
            <h3 class="text-sm font-semibold mb-4">Medium (md)</h3>
            <div class="bg-neutral-50 p-4 rounded-lg">
              <Logo size="md" />
            </div>
            <code class="text-xs mt-2 block">&lt;Logo size="md" /&gt;</code>
          </div>
          
          <div class="text-center">
            <h3 class="text-sm font-semibold mb-4">Large (lg)</h3>
            <div class="bg-neutral-50 p-4 rounded-lg">
              <Logo size="lg" />
            </div>
            <code class="text-xs mt-2 block">&lt;Logo size="lg" /&gt;</code>
          </div>
          
          <div class="text-center">
            <h3 class="text-sm font-semibold mb-4">Extra Large (xl)</h3>
            <div class="bg-neutral-50 p-4 rounded-lg">
              <Logo size="xl" />
            </div>
            <code class="text-xs mt-2 block">&lt;Logo size="xl" /&gt;</code>
          </div>
        </div>
      </section>

      <!-- Color Variants -->
      <section class="bg-white rounded-lg shadow-sm p-8">
        <h2 class="text-2xl font-bold mb-6">Variant Warna</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="text-center">
            <h3 class="text-sm font-semibold mb-4">Default</h3>
            <div class="bg-neutral-50 p-6 rounded-lg">
              <Logo size="lg" variant="default" />
            </div>
            <code class="text-xs mt-2 block">&lt;Logo variant="default" /&gt;</code>
          </div>
          
          <div class="text-center">
            <h3 class="text-sm font-semibold mb-4">White</h3>
            <div class="bg-neutral-900 p-6 rounded-lg">
              <Logo size="lg" variant="white" />
            </div>
            <code class="text-xs mt-2 block">&lt;Logo variant="white" /&gt;</code>
          </div>
          
          <div class="text-center">
            <h3 class="text-sm font-semibold mb-4">Dark</h3>
            <div class="bg-white p-6 rounded-lg border">
              <Logo size="lg" variant="dark" />
            </div>
            <code class="text-xs mt-2 block">&lt;Logo variant="dark" /&gt;</code>
          </div>
        </div>
      </section>

      <!-- Text Options -->
      <section class="bg-white rounded-lg shadow-sm p-8">
        <h2 class="text-2xl font-bold mb-6">Opsi Teks</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div class="text-center">
            <h3 class="text-sm font-semibold mb-4">Dengan Teks</h3>
            <div class="bg-neutral-50 p-6 rounded-lg">
              <Logo size="lg" showText={true} />
            </div>
            <code class="text-xs mt-2 block">&lt;Logo showText={true} /&gt;</code>
          </div>
          
          <div class="text-center">
            <h3 class="text-sm font-semibold mb-4">Tanpa Teks</h3>
            <div class="bg-neutral-50 p-6 rounded-lg">
              <Logo size="lg" showText={false} />
            </div>
            <code class="text-xs mt-2 block">&lt;Logo showText={false} /&gt;</code>
          </div>
        </div>
      </section>

      <!-- Link Option -->
      <section class="bg-white rounded-lg shadow-sm p-8">
        <h2 class="text-2xl font-bold mb-6">Logo sebagai Link</h2>
        <div class="text-center">
          <div class="bg-neutral-50 p-6 rounded-lg inline-block">
            <Logo size="lg" href="/" />
          </div>
          <code class="text-xs mt-2 block">&lt;Logo href="/" /&gt;</code>
        </div>
      </section>

      <!-- Usage Examples -->
      <section class="bg-white rounded-lg shadow-sm p-8">
        <h2 class="text-2xl font-bold mb-6">Contoh Penggunaan</h2>
        
        <div class="space-y-6">
          <!-- Header Example -->
          <div class="border rounded-lg p-4">
            <h3 class="text-lg font-semibold mb-3">Header Website</h3>
            <div class="bg-neutral-50 p-4 rounded-lg flex items-center justify-between">
              <Logo size="md" />
              <nav class="flex gap-4 text-sm">
                <a href="#" class="hover:text-primary-600">Beranda</a>
                <a href="#" class="hover:text-primary-600">Layanan</a>
                <a href="#" class="hover:text-primary-600">Kontak</a>
              </nav>
            </div>
            <code class="text-xs mt-2 block">&lt;Logo size="md" /&gt;</code>
          </div>

          <!-- Footer Example -->
          <div class="border rounded-lg p-4">
            <h3 class="text-lg font-semibold mb-3">Footer Website</h3>
            <div class="bg-neutral-900 p-4 rounded-lg">
              <Logo size="sm" variant="white" />
              <p class="text-neutral-300 text-sm mt-2">Â© 2024 KonXC. All rights reserved.</p>
            </div>
            <code class="text-xs mt-2 block">&lt;Logo size="sm" variant="white" /&gt;</code>
          </div>

          <!-- Card Example -->
          <div class="border rounded-lg p-4">
            <h3 class="text-lg font-semibold mb-3">Card/Komponen</h3>
            <div class="bg-white border p-4 rounded-lg">
              <Logo size="sm" />
              <h4 class="font-semibold mt-2">Judul Card</h4>
              <p class="text-neutral-600 text-sm">Deskripsi singkat tentang konten card ini.</p>
            </div>
            <code class="text-xs mt-2 block">&lt;Logo size="sm" /&gt;</code>
          </div>
        </div>
      </section>

      <!-- Raw Logo Files -->
      <section class="bg-white rounded-lg shadow-sm p-8">
        <h2 class="text-2xl font-bold mb-6">File Logo Mentah</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="text-center">
            <h3 class="text-sm font-semibold mb-4">JPEG Format</h3>
            <div class="bg-neutral-50 p-4 rounded-lg">
              <img src="/logo-konxc.jpg" alt="KonXC Logo" class="w-16 h-16 mx-auto rounded-lg object-cover" />
            </div>
            <code class="text-xs mt-2 block">/logo-konxc.jpg</code>
          </div>
          
          <div class="text-center">
            <h3 class="text-sm font-semibold mb-4">PNG Format</h3>
            <div class="bg-neutral-50 p-4 rounded-lg">
              <img src="/logo.png" alt="KonXC Logo" class="w-16 h-16 mx-auto rounded-lg object-cover" />
            </div>
            <code class="text-xs mt-2 block">/logo.png</code>
          </div>
          
          <div class="text-center">
            <h3 class="text-sm font-semibold mb-4">Favicon</h3>
            <div class="bg-neutral-50 p-4 rounded-lg">
              <img src="/favicon.ico" alt="KonXC Favicon" class="w-16 h-16 mx-auto rounded-lg object-cover" />
            </div>
            <code class="text-xs mt-2 block">/favicon.ico</code>
          </div>
        </div>
      </section>

    </main>
  </div>
</body>
</html>
