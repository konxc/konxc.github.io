---
import '@styles/global.css';
import Head from '@components/Head.astro';
import SimpleHeader from '@components/ui/SimpleHeader.astro';
import SimpleFooter from '@components/ui/SimpleFooter.astro';

export interface Props {
  title: string;
  description?: string;
  image?: string;
  canonical?: string;
  headerVariant?: 'default' | 'transparent' | 'minimal';
  footerVariant?: 'default' | 'minimal' | 'extended' | 'none';
}

const { 
  title, 
  description, 
  image, 
  canonical, 
  headerVariant = 'default',
  footerVariant = 'default' 
} = Astro.props;
---

<Head 
  title={title} 
  description={description} 
  image={image} 
  canonical={canonical}
/>

<SimpleHeader variant={headerVariant} />

<main>
  <slot />
</main>

{footerVariant !== 'none' && (
  <SimpleFooter />
)}
